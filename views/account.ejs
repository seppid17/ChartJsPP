<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
        content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0">

    <title>Account</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />

    <!-- CSS -->
    <link rel="stylesheet" href="/css/account.css">
    <link rel="stylesheet" href="/css/default.css">

    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/8d62299fba.js" nonce="<%= nonce %>" crossorigin="anonymous"></script>

</head>


<body>
    <!-- Navbar -->
    <%- include('navbar.ejs', {"pageName":"account"}) %>

    <!-- popup to display success and error messages -->
    <%- include('showMsg.ejs') %>

    <!-- loader -->
    <%- include('loader.ejs') %>

    <!-- dark mode switch -->
    <%- include('dark.ejs') %>

    <div class="container">
        <div class="row">
            <div class="wrapper d-md-flex">
                <div class="col-md-3 col-opt">
                    <div class="row align-items-start btn-opt-row">
                        <div class="col">
                            <button type="button" class="btn btn-opt btn-opt-selected" id="AccountDetails"><b>Account Details</b></button>
                        </div>
                    </div>
                    <div class="row align-items-center btn-opt-row">
                        <div class="col">
                            <button type="button" class="btn btn-opt" id="ChangePassword"><b>Change Password</b></button>
                        </div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col">
                            <button type="button" class="btn btn-opt" id="DeleteAccount"><b>Delete Account</b></button>
                        </div>
                    </div>
                </div>

                <div class="col-md-1"></div>

                <div class="col-md-8">

                    <div style="display: block;" id="AccountDetailsDiv" class="p-1">
                        <form id="nameForm" action="/account/name" method="post">

                            <div class="form-control form-outline form-input email-div">
                                <div class="row email-row">
                                    <div class="col-3 d-flex justify-content-start align-items-center">
                                        <label class="form-label">Email</label>
                                    </div>
                                    <div class="col">
                                        <span class="form-label-email">
                                            <%= email %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-3 d-flex justify-content-start align-items-center input-name">
                                    <label class="form-label" for="firstName">First Name</label>
                                </div>
                                <div class="col">
                                    <div class="form-control form-outline form-input">
                                        <input type="text" name="firstName" id="firstName" value="<%= firstName %>"/>
                                        <small>Error message</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-3 d-flex justify-content-start align-items-center input-name">
                                    <label class="form-label" for="lastName">Last Name</label>
                                </div>
                                <div class="col">
                                    <div class="form-control form-outline form-input">
                                        <input type="text" name="lastName" id="lastName" value="<%= lastName %>"/>
                                        <small>Error message</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-3 d-flex justify-content-start align-items-center input-name">
                                    <label class="form-label" for="password">Password</label>
                                </div>
                                <div class="col">
                                    <div class="form-control form-outline form-input">
                                        <input type="password" id="password"/>
                                        <small>Error message</small>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <div class="row">
                                    <div class="col-3">
                                    </div>
                                    <div class="col">
                                        <input class="btn btn-submit" id="changeNameBtn" type="submit" value="Update" />
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>

                    <div style="display: none;" id="ChangePasswordDiv" class="p-1">
                        <form id="passwordForm" action="/account/password" method="post" class="form">

                            <div class="row">
                                <div class="col-5 d-flex justify-content-start align-items-center input-name">
                                    <label class="form-label" for="curPassword">Current Password</label>
                                </div>
                                <div class="col">
                                    <div class="form-control form-outline form-input">
                                        <input type="password" name="curPassword" id="curPassword"/>
                                        <small>Error message</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-5 d-flex justify-content-start align-items-center input-name">
                                    <label class="form-label" for="newPassword">New Password</label>
                                </div>
                                <div class="col">
                                    <div class="form-control form-outline form-input">
                                        <input type="password" name="newPassword" id="newPassword"/>
                                        <small>Error message</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-5 d-flex justify-content-start align-items-center input-name">
                                    <label class="form-label" for="cnfPassword">Confirm New Password</label>
                                </div>
                                <div class="col">
                                    <div class="form-control form-outline form-input">
                                        <input type="password" id="cnfPassword"/>
                                        <small>Error message</small>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <div class="row">
                                    <div class="col-5">
                                    </div>
                                    <div class="col">
                                        <input id="changePasswdBtn" class="btn btn-submit" type="submit"
                                            value="Change Password" />
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>

                    <div style="display: none;" id="DeleteAccountDiv">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Permanently Delete Your Account</h5>
                                <p class="card-text">This action cannot be undone</p>
                                <form id="accountForm" action="/account/delete" method="post" class="form">
                                    <div class="row delete-password">
                                        <div class="col-3 d-flex justify-content-start align-items-center">
                                            <label class="form-label form-label-delete" for="password">Password</label>
                                        </div>
                                        <div class="col">
                                            <div class="form-control form-outline form-input" style="background-color:#FFEBEB">
                                                <input type="password" name="password" id="delPassword" placeholder="Password" />
                                                <small>Error message</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="text-center">
                                            <input id="deleteBtn" class="btn btn-delete" type="submit" value="Delete Account" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/scripts/common.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/account.js" nonce="<%= nonce %>"></script>

    <!-- Bootstrap js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" nonce="<%= nonce %>"
        integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"
        defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" nonce="<%= nonce %>"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"
        defer></script>
</body>

</html>