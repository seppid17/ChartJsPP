<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
        content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0">

    <title>Dashboard</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />

    <!-- CSS -->
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/default.css">

    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/8d62299fba.js" nonce="<%= nonce %>" crossorigin="anonymous"></script>

</head>

<body>
    <!-- Navbar -->
    <%- include('navbar.ejs', {"pageName":"dashboard"}) %>

    <!-- popup to display success and error messages -->
    <%- include('showMsg.ejs') %>

    <!-- loader -->
    <%- include('loader.ejs') %>

    <!-- dark mode switch -->
    <%- include('dark.ejs') %>

        <div class="container">
            <div class="row justify-content-center">
                <div class="wrapper">
                    <div>
                        <div class="row title-saved">
                            <div class="col">
                                <nobr><h4 id="nameSpan" class="text-saved">Welcome <%= firstName %> <%= lastName %>!</h4></nobr>
                            </div>
                            <div class="col text-end">
                                <a class="btn btn-submit btn-cn" data-toggle="tab" href="/chart" target="_blank">
                                    <i class="fa-solid fa-circle-plus"></i>
                                    <span>New</span>
                                </a>
                            </div>
                        </div>

                        <div class="title-saved d-flex align-item-center">
                            <h6 class="saved-text">Saved Charts</h6>
                            <h6 id="chartCount">
                                <span id="currentChartCount"></span>
                            </h6>
                        </div>

                        <div class="row" id="cardsDiv">
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>

        <!-- Bootstrap js-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" nonce="<%= nonce %>"
            integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"
            defer></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" nonce="<%= nonce %>"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"
            defer></script>
        <script src="/scripts/common.js" nonce="<%= nonce %>"></script>
        <script src="/scripts/dashboard.js" nonce="<%= nonce %>"></script>

</body>

</html>