<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <title>Chart</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />

    <!-- CSS -->
    <link rel="stylesheet" href="/css/default.css">
    <link rel="stylesheet" href="/css/chart.css">

    <!-- Fontawesome -->
    <!-- <link rel="stylesheet" href="css/font-awesome/css/font-awesome.min.css"> -->
    <script src="https://kit.fontawesome.com/8d62299fba.js" crossorigin="anonymous"></script>
    <style>
        #dropDiv {
            border: 2px dashed #ccc;
            border-radius: 20px;
            width: 80%;
            font-family: sans-serif;
            margin: 50px;
            margin-top: 10px;
            padding: 20px;
        }

        #dropDiv.highlight {
            border-color: purple;
        }

        p {
            margin: 50px auto;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">

            <!-- navbar brand -->
            <a class="navbar-brand" href="">
                <img src="/images/icon.webp" alt="Avatar Logo" class="nav-pill">&nbsp;Chart.js++
            </a>
            <button class="navbar-toggler collapsed d-flex d-lg-none flex-column justify-content-around" type="button"
                data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarcontent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="toggler-icon top-bar"></span>
                <span class="toggler-icon middle-bar"></span>
                <span class="toggler-icon bottom-bar"></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>

                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/account">
                            <i class="fa-solid fa-user-gear"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/login">Sign out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid con-pad shadow-lg p-1 mb-5 bg-white rounded">
        <div class="row justify-content-center">
            <!-- <div class="wrapper"> -->
            <div class="row title-saved">
                <div class="col pt-2 d-flex justify-content-center">
                    <h3 class="text-saved">Chart title</h3>
                </div>
                <div class="col-md-auto pt-2 d-flex justify-content-center">
                    <a class="btn btn-submit" data-toggle="tab" href="">
                        <i class="fa-solid fa-circle-plus"></i>
                        <span>Create New</span>
                    </a>
                </div>
                <div class="col col-lg-2  pt-2 d-flex justify-content-center">
                    <!-- <div class="row"> -->
                    <table class="table-bord">
                        <thead>
                            <th>
                                <button class="btn-icon">
                                    <i class="fa-solid fa-share-nodes btn-icon-hov"></i>
                                </button>
                            </th>
                            <th>
                                <button class="btn-icon" id="downloadImgBtn">
                                    <i class="fa-sharp fa-solid fa-download btn-icon-hov"></i>
                                </button>
                            </th>
                            <th>
                                <button class="btn-icon">
                                    <i class="fa-solid fa-trash-can btn-icon-hov"></i>
                                </button>
                            </th>
                            <th>
                                <button class="btn-icon">
                                    <i class="fa-solid fa-floppy-disk btn-icon-hov"></i>
                                </button>
                            </th>
                            <th>
                                <button class="btn-icon" id="DisplayEdit">
                                    <i class="fa-solid fa-pen-to-square btn-icon-hov"></i>
                                </button>
                            </th>
                        </thead>
                    </table>
                    <!-- </div> -->
                </div>
            </div>
            <div class="row">
                <div class="col chart-sty shadow-lg p-3 mb-5 bg-white rounded" id="chartDiv">
                    <!-- <div id="chartDiv"> -->
                    <canvas id="myChart"></canvas>
                    <!-- </div> -->
                </div>
                <div class="col col-lg-3 shadow-sm p-3 mb-5 bg-white rounded" style="display:block;"
                    id="EditChartOption">
                    <div class="row">
                        <div class="col d-flex justify-content-end">
                            <button class="btn-icon" id="CloseEdit">
                                <i class="fa-solid fa-x btn-icon-hov"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <div class="form-control form-outline form-input">
                                <label class="form-label" for="textName">Text</label>
                                <div class="row">
                                    <div class="input-group">
                                        <input type="text" name="" id="textName" class="form-control" placeholder="" />
                                        <div class="input-group-prepend">
                                            <button class="btn-icon" style="height: 47px;">
                                                <i class="fa-regular fa-circle-check btn-icon-hov"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-start">
                            <table class="table-bord">
                                <thead>
                                    <th>
                                        <button class="btn-icon1">
                                            <i class="fa-solid fa-bold btn-icon-hov1"></i>
                                        </button>
                                    </th>
                                    <th>
                                        <button class="btn-icon1">
                                            <i class="fa-solid fa-underline  btn-icon-hov1"></i>
                                        </button>
                                    </th>
                                    <th>
                                        <button class="btn-icon1">
                                            <i class="fa-solid fa-italic btn-icon-hov1"></i>
                                        </button>
                                    </th>
                                    <th>
                                        <select class="cus-select" id="inputGroupSelect01">
                                            <option selected>size</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                        </select>
                                    </th>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="col">
                                <div class="form-control form-outline form-input">
                                    <label class="form-label" for="textName">Select colour</label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- </div> -->
        </div>
    </div>
    <div style="display: block;">

        <div>
            <button id="drawBtn">Draw</button>
        </div>
        <div>
            <input type="radio" name="charttype" value="bar" checked>Bar<br>
            <input type="radio" name="charttype" value="pie">Pie<br>
            <input type="radio" name="charttype" value="line">Line<br>
            <input type="radio" name="charttype" value="doughnut">Doughnut<br>
            <input type="radio" name="charttype" value="polarArea">Polar Area<br>
        </div>
        <div>
            <div>
                <button id="selectFileBtn">Select file</button>
            </div>
            <div id="dropDiv">
                <p id="dropP">Upload CSV file by dragging and dropping onto the dashed region</p>
            </div>
        </div>
    </div>
    <script src="/scripts/parseData.js"></script>
    <script src="/scripts/dragDrop.js"></script>
    <script src="/scripts/chart.js"></script>
    <!-- Bootstrap js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"
        defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"
        defer></script>
</body>

</html>