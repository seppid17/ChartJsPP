<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Draw simple and hierarchical charts">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js" nonce="<%= nonce %>"
        integrity="sha384-9MhbyIRcBVQiiC7FSd7T38oJNj2Zh+EfxS7/vjhBi4OOT78NlHSnzM31EZRWR1LZ" crossorigin="anonymous"></script>
    <title>Chart</title>
    <link rel="preload" as="image" href="/images/brandWhite.png" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />

    <!-- CSS -->
    <link rel="stylesheet" href="/css/chart.css">
    <link rel="stylesheet" href="/css/loginPopup.css">
    <link rel="stylesheet" href="/css/default.css">

</head>

<body class="authOnly noMarker noLegend noAxis">

    <!-- Navbar -->
    <%- include('navbar.ejs', {"pageName":"chart"}) %>

    <!-- popup to display success, error, and confirm messages -->
    <%- include('showMsg.ejs') %>

    <!-- loader -->
    <%- include('loader.ejs') %>

    <!-- dark mode switch -->
    <%- include('dark.ejs') %>

    <!-- login form -->
    <%- include('loginPopup.ejs') %>

    <div class="container">

        <div class="wrapper-chart-main">
            <!-- chart view -->
            <%- include('viewChart.ejs') %>

            <!-- chart data input view -->
            <div class="authOnly onlyAuth">
            <%- include('generateChart.ejs') %>
            </div>
        </div>
    </div>

    <script src="/scripts/common.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/parseData.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/dataFormatHelper.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/dragDrop.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/rectangle.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/arc.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/hierarchicalController.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/sunburst.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/treemap.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/icicle.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/chartConfig.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/validator.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/chartSettings.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/chart.js" nonce="<%= nonce %>"></script>
    <!-- Bootstrap js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" nonce="<%= nonce %>"
        integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"
        defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" nonce="<%= nonce %>"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"
        defer></script>
</body>

</html>