<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
        content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0">

    <title>Login</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />

    <!-- CSS -->
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/default.css">

    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/8d62299fba.js" nonce="<%= nonce %>" crossorigin="anonymous"></script>

</head>

<body>
    <!-- Navbar -->
    <%- include('navbar.ejs', {"pageName":"login"}) %>

    <!-- popup to display success and error messages -->
    <%- include('showMsg.ejs') %>

    <!-- loader -->
    <%- include('loader.ejs') %>

    <!-- dark mode switch -->
    <%- include('dark.ejs') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrapper d-md-flex">
                    <div class="img-area">
                        <div class="row brand-row">
                            <img src="/images/brandWhite.png" alt="logo" class="pill">
                        </div>

                        <img src="/images/chart.webp" class="image-chart" alt="Image">

                    </div>
                    <div class="login-wrapper p-4">
                        <p class="text-end text-new-signup">Don't have an account?&nbsp;<a class="btn btn-signup"
                                data-toggle="tab" href="/signup">SIGN UP</a></p>
                        <div class="d-flex">
                            <div>
                                <h1 class="text-hello">Hello! Welcome Back</h1>
                                <p class="text-login">Login to your account</p>
                            </div>
                        </div>

                        <form id="loginForm" method="post" class="form">

                            <div class="form-control form-outline form-input">
                                <label class="form-label" for="username">Email</label>
                                <input type="email" name="email" id="email"
                                    placeholder="johndoe@gmail.com" />
                                <small>Error message</small>
                            </div>

                            <div class="form-control form-outline form-input">
                                <label class="form-label" for="password">Password</label>
                                <input type="password" name="password" id="password"
                                    placeholder="Password" />
                                <small>Error message</small>
                            </div>

                            <a class="btn btn-forgot" data-toggle="tab" href="/forgotPassword">Forgot Password?</a>

                            <div>
                                <input class="btn btn-submit" type="submit" id="submit" value="Login">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/scripts/common.js" nonce="<%= nonce %>"></script>
    <script src="/scripts/login.js" nonce="<%= nonce %>"></script>

    <!-- Bootstrap js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" nonce="<%= nonce %>"
        integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"
        defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" nonce="<%= nonce %>"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"
        defer></script>
</body>

</html>